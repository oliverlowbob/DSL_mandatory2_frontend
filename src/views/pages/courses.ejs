<!DOCTYPE html>
<html lang=en>

<head>
    <%- include('../partials/head'); %>
</head>

<body>
    <header>
        <%- include('../partials/header'); %>
    </header>
    <main class="container">
        <h3>Courses</h3>
        <table class="striped">
            <thead>
                <tr>
                    <th>Course</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                <% courses.forEach(course => { %>
                <tr>
                    <td><a href="/courses/<%= course.id %>"><%= course.name %></a></td>
                    <td><a href="/courses/<%= course.id %>/attendance">See attendance</a></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </main>

    <%- include('../partials/footer'); %>
</body>

</html>